@model IEnumerable<UserModel>

<div class="row">
    <div class="col-md-12">
        <h2>User management</h2>
        <table>
            <thead>
                <tr>@Html.NameFor(model => model.FirstOrDefault().Id)</tr>
                <tr>@Html.NameFor(model => model.FirstOrDefault().DisplayName)</tr>
                <tr>@Html.NameFor(model => model.FirstOrDefault().Email)</tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">@user.Id</a></td>
                        <td>@user.DisplayName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
